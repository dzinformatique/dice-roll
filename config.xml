<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.diceroll" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dice Roll</name>
    <description>Application de Dice Roll simple en HTML/CSS/JS</description>
    <author email="wahab.inf@gmail.com">Ramdani Abdelouahab</author>
    <content src="index.html"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- ✅ الأيقونة -->
    <icon src="res/icons/icon.png" />

    <!-- ✅ إعدادات splash -->
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />

    <platform name="android">
        <icon density="mdpi" src="res/icons/icon.png" />
        <splash density="port-mdpi" src="res/splash/splash.png" />
    </platform>
</widget>
